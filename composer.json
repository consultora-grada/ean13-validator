{
    "name": "consultora-grada/ean13-validator",
    "description": "Validates ean13 check digit",
    "keywords": [
        "grada",
        "ean13validator"
    ],
    "homepage": "https://github.com/consultora-grada/ean13-validator",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos Rub√©n Jacobs",
            "email": "carlos.jacobs@grada.com.ar",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Grada\\Ean13validator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grada\\Ean13validator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
